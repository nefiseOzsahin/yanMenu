<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="@dimen/ustbosluk"
        android:id="@+id/not_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:hint="@string/notes" />

    <Button

        android:layout_marginTop="@dimen/ustbosluk"
        android:id="@+id/noteEkle_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/not_ekle" />

    <Button
        android:onClick="notlaraDon"
        android:layout_marginTop="@dimen/ustbosluk"
        android:id="@+id/don_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notlar_ma_d_n" />

</LinearLayout>